<% content_for :heading do %>
  <a class="mybtn btn btn-link btn-xs pull-left" href="/"><i class="material-icons">&#xE317;</i> 
  	<% if(!params[:role].blank?) %>
  		Add <%= params[:role] %>
  	<% else %>
  		Add Staff
  	<% end %>
  </a>
<% end %>
<div class="new-staff-step-1-form-div" style="max-width:700px;margin:0 auto;margin-top: 60px;margin-bottom:50px;position:relative;">
	<%= form_tag add_new_staff_institute_path(@institute), method: :post, multipart: true, remote: true, id: "new-staff-form" do %>
		<%= hidden_field_tag :step, 1 %>
		<div class="form-inline form-inline-select">
			<div class="form-group">
				<%= text_field_tag :first_name, nil, placeholder: "First Name", class: "form-control", required: true %>
			</div>
			<div class="form-group">
				<%= text_field_tag :last_name, nil, placeholder: "Last Name", class: "form-control", required: true %>
			</div>
		</div>	
		<div class="form-group">
			<%= email_field_tag :email, nil, placeholder: "Email Address (Optional)" , class: "form-control" %>
		</div>
		<div class="form-group">
			<%= number_field_tag :mobile_no, nil, placeholder: "Mobile No", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= select_tag :gender, options_for_select([["Gender", ""], ["Male", "male"], ["Female", "female"]], ["Gender", ""]),  class: "form-control",required: true %>
		</div>
		<div class="form-group">
			<%= text_field_tag :address, nil, placeholder: "Address", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= number_field_tag :pincode, nil, placeholder: "Pin Code", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<%= text_field_tag :staff_id, nil, placeholder: "Staff ID", class: "form-control", required: true %>
		</div>
		<div class="form-group">
			<% if(!params[:role].blank?) %>
				<% default_option = [params[:role], params[:role]] %>
			<% else %>
				<% default_option = ["Select Role", ""] %>
			<% end %>
			<%= select_tag :role, options_for_select([["Select Role", ""], ["Principal", "Principal"], ["Institute Admin","Institute Admin"], ["Teacher", "Teacher"]], default_option), class: "form-control", required: true %>
		</div>
		<label for="transport-checkbox" style="display: block;">
			<div class="nothing-posted" style="font-size:12px;margin-bottom:10px;">
				<span style="vertical-align:middle;">Is using School Transport</span> <%= check_box_tag :is_using_transport, true, false, style:"vertical-align:middle", id: "transport-checkbox" %> 
			</div>
		</label>
		<div class="text-center col-md-6 col-md-offset-3">
			<div class="form-group form-button-register">
				<%= button_tag(type:"submit", class: "form-control btn btn-login", data: {disable_with: "Please wait..."}) do %>
					Next
				<% end %>
			</div>
		</div>

	<% end %>
</div>