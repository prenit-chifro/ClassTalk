<% if(!@teachers.blank?) %>
	<%= form_tag set_classteacher_institute_grade_section_path(@institute, @grade, @section), multipart: true, remote: true do %>
		<% options = [["ClassTeacher", "ClassTeacher"]] %>
		
		<% if(@classteacher.blank?) %>
			<% default_option = ["ClassTeacher", "ClassTeacher"] %>
		<% else %>
			<% default_option = ["#{@classteacher.first_name} #{@classteacher.last_name}", @classteacher.id] %>
		<% end %>
		<% @teachers.each do |teacher| %>
			<% options << ["#{teacher.first_name} #{teacher.last_name}", teacher.id] %>
		<% end %>
		<div class="col-sm-12 col-xs-12">
			<div class="form-group">
				<%= select_tag :classteacher_id, options_for_select(options, default_option), required: true %>
			</div>
		</div>
		
		<div class="col-sm-12 col-xs-12">
			<button type="submit" class="btn btn-success" style="width: 100%;" data-disable-with="Setting ..."> Set </button>
		</div>

	<% end %>
<% else %>
	<%= link_to add_new_staff_institute_path(@institute, role: "Teacher") do %>
		<div class="pull-right add-member">
			<span>Add Teacher</span><i class="material-icons">&#xE7FE;</i>
		</div>
	<% end %>
	<div class="clearfix mar-btm"></div>
	<h1 class="nothing-posted"> No Teachers added yet !</h1>
<% end %>
