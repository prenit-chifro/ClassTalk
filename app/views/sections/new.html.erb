<% content_for :heading do %>
  <a class="mybtn btn btn-link btn-xs pull-left" href="/"><i class="material-icons">&#xE317;</i>Add Class <%= @grade.grade_name %> Sections</a>
<% end %>
<div style="margin-top: 100px;"></div>
<div class="new-section-step-1-form-div">
	<%= form_tag institute_grade_sections_path(@institute, @grade), method: :post, multipart: true, remote: true, id: "new-section-form" do %>
		<%= hidden_field_tag :step, 1 %>
			
		<div class="grades-div text-left">
			
			<% @sections.each do |section| %>					
				<div class="main-grade">

					<ul class="detectul">
						<li class="listitems"> 
							<div class="checkbox">
								<label for="grades-division-<%= section.id %>" class="grades-division">
									<%= check_box_tag "section_ids[#{section.id}][section_id]", section.id, false, { class: "checkbox grade-names-input", id: "grades-division-#{section.id}"} %>
									<span>Section <%= section.section_name %></span>
									<span><i class="material-icons circle-arrow-down-icon" style="top:9px;right:6px;font-size:27px;color: #fff;">&#xE313;</i></span>
								</label>
							</div>
						</li>
					</ul>	
					<div class="division-criterias" style="display:none;">
						<% if(!@teachers.blank?) %>
				    		<h1> Select ClassTeacher of Class <%= @grade.grade_name %><%= section.section_name %> </h1>		
							<% options = [["Select ClassTeacher", ""]] %>	
							<% default_option = ["Select ClassTeacher", ""] %>
							<% @teachers.each do |teacher| %>
								<% options << [teacher.first_name + " " + teacher.last_name, teacher.id] %>
							<% end %>
							<%= select_tag "section_ids[#{section.id}][classteacher_id]", options_for_select(options, default_option) %>
						<% end %>

					</div>	
				</div>					
			<% end %>
		</div>			
		<%= submit_tag :Next, "data-disable-with" => "Please Wait..." %>

	<% end %>
</div>
<div style="margin-bottom: 100px;"></div>
<script type="text/javascript">
	$(document).on('change','.grade-names-input',function(){
		if($(this).is(':checked')) {
			$(this).parents(".main-grade").find(".division-criterias").slideDown();
			$(this).parents("ul.detectul").find(".circle-arrow-down-icon").addClass("arrow-circle-up");
		} else {
			$(this).parents(".main-grade").find(".division-criterias").slideUp();
			$(this).parents("ul.detectul").find(".circle-arrow-down-icon").removeClass("arrow-circle-up");
		}
	});
	$(".all-sections").change(function(e){
		$(this).parents(".main-grade").find(".division-upper-sections input:checkbox").prop('checked', $(this).prop("checked"));
	});

</script>>
