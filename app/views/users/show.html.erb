<nav class="navbar navbar-inverse navbar-fixed-top main-app-header main-app-conversation-new-header">
	<div class="container-fluid">
		<div class="navbar-header main-app-header main-app-conversation-new-header pull-left">
			<a class="mybtn btn btn-link btn-xs pull-left" href="/"><i class="material-icons">&#xE317;</i></a>
		</div>
		<ul class="nav navbar-nav navbar-right main-app-show-header pull-right display_inline" style="padding-right: 16px;">
			<% if(@user.id == current_user.id) %>
				<li>
				<%= link_to edit_user_path(@user) do %>
					<i class="material-icons">&#xE254;</i>
				<% end %>					
				</li>
			<% end %>
		</ul>
	</div>
</nav>
<div class="container-width conversation-user-container">
	<div class="row new-group-row">
		<div class="col-lg-12 text-center">
			<div id="new-group-profile-picture-target">
				<div id="new-group-profile-picture-inner-target" class="new-group-profile-picture-inner-target">
					<img src="<%= @user.profile_picture.media.url(:medium)  %>" class="img-responsive"> 
				</div>	
			</div>			
		</div>		
	</div>
	<div class="text-muted text-center">
		<h4><%= @user.first_name %> <%= @user.last_name %></h4>
	</div>
	
	<div class="text-muted pad-hor mar-btm visible-to-current-user">
		<h4>About <%= "#{'You' if current_user.id == @user.id}" %><%= "#{@user.first_name + ' ' + @user.last_name if current_user.id != @user.id}" %></h4>
		<p><%= @user.details %></p>
		<% if(@user.id == current_user.id) %>
			<div class="text-muted" style="margin-bottom:10px;">This is only visible to your account.</div>
			<p>Email: <span class="pull-right"><%= @user.email %></span></p>
			<p>Contact no: <span class="pull-right"><%= "+#{@user.isd_code if !@user.mobile_no.blank?}""#{@user.mobile_no}" %></span></p>
		<% end %>
		
	</div>
