<div class="media mar-btm media-conversation open-contact-on-click-element-parent">
	<div class="media-left media-middle open-contact-on-click-element">
		<img src="<%= contact.profile_picture.media.url(:thumb) %>" class="media-object img-circle" >
	</div>
	
	<div class="media-body media-middle open-contact-on-click-element">
		<h4 class="media-heading">
			<span class="media-heading-content"><%= contact.first_name %> <%= contact.last_name %></span>
			
		</h4>
		<p class="text-muted media-heading-role"><%= contact.details %></p>
		
	</div>
	<span class="pull-right message-span">
		<%= link_to conversations_path(participant_ids: [contact.id], conversation_id:"#{params[:conversation_id]}"), method: :post do %>
			<i class="material-icons"> &#xE0C9; </i>
		<% end %>
	</span>	
	<div class="icon-short-profile-modal-main-div"  style="display:none;">
		<ul class="icon-short-profile-modal list-inline display_inline text-center">
			<li>
				<%= link_to conversations_path(participant_ids: [contact.id], conversation_id:"#{params[:conversation_id]}"), method: :post do %>
					<i class="material-icons"> &#xE0C9; </i>
				<% end %>				
			</li>
			<li><%= link_to user_path(contact) do %><i class="material-icons">&#xE89E;</i><% end %></li>
		</ul>
	</div>
	
</div>

