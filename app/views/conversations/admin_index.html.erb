			      if(event.edit_url){
			        $.ajax({
			          url: event.edit_url,
			          complete: function(data){
			            if(data.status == "200"){
			              $('#dayPlanModal').find('.modal-body').html(data.responseText);
			              $('#dayPlanModal').modal('show');
			            }
			          }
			        });
			      }     
			      return false;
			  },
