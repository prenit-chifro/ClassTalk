<!DOCTYPE html>
<html>
	<head>
		<title>ClassTalk</title>
		<%= csrf_meta_tags %>

		<%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track": "reload" %>
		<%= stylesheet_link_tag "//fonts.googleapis.com/css?family=Julius+Sans+One" %>
		<%= javascript_include_tag "application", "data-turbolinks-track": "reload" %>
		<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
		<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=0">
	</head>
	<body>
		<div class="wrapper">
		    <nav class="navbar navbar-default navbar-fixed-top">
				<div class="container-width">
					<div class="navbar-header pull-left">
						<button type="button" class="navbar-toggle collapsed pull-left" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
							<span class="sr-only">Toggle navigation</span>
							<span class="icon-bar top-bar"></span>
							<span class="icon-bar middle-bar"></span>
							<span class="icon-bar bottom-bar"></span>
						</button>
						<a class="navbar-brand" href="javascript:void(0);"><%= yield :heading %></a>
					</div>
					<div id="navbar" class="navbar-collapse collapse pull-left navbar-fixed-small-screen">
						<ul class="nav navbar-nav left-self-image">
							<li class="self-image text-center">
								<a href="/users/<%= current_user.id %>">
									<img src="<%= current_user.profile_picture.media.url(:medium) %>"  class="img-circle img-sm">
									<br>
									<span><%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize %></span>
									<br>
									<span class="school-name"><%= current_user.details %></span>
								</a>
							</li>
							
							<li>
								<a href="/conversations">My Messages</a>
							</li>			
							<li>
								<a href="<%= institute_grades_path(@institute) %>">My Classes</a>
							</li>
							<li><a href="/attendance_records">My Attendance</a></li>
							<li>
								<a href="<%= my_classwork_institute_path(@institute) %>">My ClassWork</a>
							</li>			
							<li><a href="<%= institute_notices_path(@institute) %>">My Notices</a></li>
							<li><a href="<%= institute_events_path(@institute) %>">My Calendar/Day Plan</a></li>
							
							
							<li><a href="">Help</a></li>						
						</ul>
					</div><!--/.nav-collapse -->
					<ul class="nav navbar-nav navbar-right pull-right right-self-image" style="margin-right: 3px;">
						<li class="main-school-name"><%= link_to conversation_path(@institute_conversation) do %><%= @institute_conversation.conversation_name %><% end %></li>
						<li class="main-image text-center">
							<a href="/users/<%= current_user.id %>">
								<img src="<%= current_user.profile_picture.media.url(:thumb) %>" class="img-circle img-sm" >
								<br>
								<span><%= current_user.first_name.capitalize %></span>
							</a>
						</li>
					</ul>
				</div>
			</nav>
			<%= yield %>
		</div>
	</body>
</html>
