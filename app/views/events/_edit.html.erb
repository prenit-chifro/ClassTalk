<%= form_tag institute_event_path(@institute, event), method: :patch, remote: true do %>
	<p style="color: #d69641; font-size: 20px;"><%= event.institute.institute_name + ": " if !event.institute_id.blank? %></p>
	<div class="form-group">
		<%= text_field_tag :title, event.title, placeholder: :Title, class: "form-control", required: true %>
	</div>
	<div class="form-group">
		<%= text_area_tag :description, event.description, placeholder: :Description, required: true, class: "form-control" %>
	</div>
	<div class="form-group">
		<label>Event Start Date-Time:</label>
		<%= datetime_field_tag :start_time, event.start_time.strftime("%Y-%m-%dT%H:%M"), class:"form-control", required: true %> 
	</div>
	<div class="form-group">
		<label>Event End Date-Time:</label>
		<%= datetime_field_tag :end_time, event.end_time.strftime("%Y-%m-%dT%H:%M"), class:"form-control", required: true %>
	</div>
	<div class="form-group form-inline new-event-checkbox">
		<label>All Day Event?</label>
		<%= check_box_tag :is_all_day_event, "true", event.is_all_day_event ? true : false %>	
	</div>	

	<div class="form-group form-button-register">
		<%= button_tag(type:"submit", class: "form-control btn btn-login") do %>
			Update
		<% end %>
	</div>
<% end %>
